<div class="tab-pane fade active in" id="details" >
                <div id="content" class="span10">
            <div class="row-fluid sortable">        
                <div class="box span12">

                    <div class="box-header" data-original-title>
                        <h2><i class="halflings-icon white user"></i><span class="break"></span>All books</h2>
                   
                        <span><%=link_to new_book_path do%> <button type="button" class="btn btn-lg btn-success">ADDBOOK</button><%end%> <span>
                        <div class="box-icon">
                            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                            <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                                  <th>ID</th>
                                  <th>Cover</th>
                                  <th>Info</th>
                                  <th>Author</th>
                                  <th>Price</th>
                                  <th>Publish date</th>
                                  <th>Actions</th>
                              </tr>
                          </thead>   
                          <tbody>
                            <%Book.all.each do |book|%>
                            <tr>
                              <td><%= book.id%></td>
                              <td><%=image_tag book.image_file_name, :class =>"image-small"%></td>
                                <td><%=book.title%></td>
                                <td><%=book.author%></td>
                                <td><%=book.price%></td>
                                <td class="center"><%=book.created_at.strftime("%d/%m/%Y") %></td>
                                <td class="center">
                                    <%= link_to book_path(book) do%>
                                      <span class="btn btn-success">
                                       <i class="fa fa-info"></i></i>
                                    </span>
                                    <% end %> 
                                    <%= link_to edit_book_path(book) do%>
                                      <span class="btn btn-info">
                                       <i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    <% end %> 
                                    <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do%>
                                      <span class="btn btn-danger">
                                       <i class="fa fa-trash"></i>
                                    </span>
                                    <% end %>
                                    
                                </td>
                            </tr>
                            <% end %>
                          </tbody>
                      </table>            
                    </div>
                </div><!--/span-->
            </div><!--/row-->
            </div>
              </div>