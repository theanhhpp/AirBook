<div class="tab-pane fade" id="companyprofile" >
                <div id="content" class="span10">
            <div class="row-fluid sortable">        
                <div class="box span12">

                    <div class="box-header" data-original-title>
                        <h2><i class="halflings-icon white user"></i><span class="break"></span>All genres</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                            <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                                  <th>ID</th>
                                  <th>Name</th>
                                  <th>Books</th>
                                  <th>Created date</th>
                                  <th>Actions</th>
                              </tr>
                          </thead>   
                          <tbody>
                            <%Genre.all.each do |genre|%>
                            <tr>
                              <td><%= genre.id%></td>
                                <td><%=genre.name%></td>
                                <td><%=Book.where(genre_id: genre.id).count%></td>
                                <td class="center"><%=genre.created_at.strftime("%d/%m/%Y") %></td>
                                <td class="center">
                                    <%= link_to genre_path(genre) do%>
                                      <span class="btn btn-success">
                                       <i class="fa fa-info"></i></i>
                                    </span>
                                    <% end %> 
                                    <%= link_to edit_genre_path(genre) do%>
                                      <span class="btn btn-info">
                                       <i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    <% end %> 
                                    <%= link_to genre, method: :delete, data: { confirm: 'Are you sure?' } do%>
                                      <span class="btn btn-danger">
                                       <i class="fa fa-trash"></i>
                                    </span>
                                    <% end %>
                                    
                                </td>
                            </tr>
                            <% end %>
                          </tbody>
                      </table>            
                    </div>
                </div><!--/span-->
            </div><!--/row-->
            </div>
              </div>