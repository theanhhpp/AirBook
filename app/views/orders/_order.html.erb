<div id="content" class="span10">
            <div class="row-fluid sortable">        
                <div class="box span12">
                    <div class="box-header" data-original-title>
                        <h2><i class="halflings-icon white user"></i><span class="break"></span>Order Details</h2>
                      <div class="col-sm-4 pull-right">
                        <ul class="list-group">
                            <li class="list-group-item"><i class="fa fa-user"></i> <span class='pull-right'><%=@order.name%></span></li>
                            <li class="list-group-item"><i class="fa fa-envelope"></i> <span class='pull-right'><%=@order.email%></span></li>
                            <li class="list-group-item"><i class="fa fa-credit-card"></i> <span class='pull-right'><%=@order.pay_type%></span></li>
                            <li class="list-group-item"><i class="fa fa-map-marker"></i> <span class='pull-right'><%=@order.address%></span></li>
                        </ul>
                    </div>

                        <div class="box-icon">
                            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                            <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                              	<th></th>
                                  <th>Item</th>
                                  <th>Price</th>
                                  <th>Quantity</th>
                                  <th>Total</th>
                              </tr>
                          </thead>   
                          <tbody>
                                <%s=0%>
								<% @order.line_items.all.each do |item|%>
								 <tr>
									<td><%=image_tag item.book.image_file_name, :class =>"image-small"%></td>
									<td><%=item.book.title%> by <%=item.book.author%></td>
									<td><%=item.book.price%></td>
									<td><%=item.quantity%></td>
									<td><%=item.total %></td>
									<%s=s+item.total%>
	                            </tr>
								<%end%>
								<tr>
									<td colspan='4'><strong>TOTAL</strong></td>
									<td><%=s%></td>
								</tr>
                                    
                               
                          </tbody>
                      </table>       
                          <div class="row">
                   
                    <!-- /.col-sm-4 -->
                </div>     
                    </div>
                </div><!--/span-->
            </div><!--/row-->
            </div>