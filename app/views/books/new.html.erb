 <div id="wrapper">
    <div id="page-content-wrapper">
        <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Books <small>Books Management</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> Dashboard / <i class="fa fa-book"></i> Books / New book
                            </li>
                        </ol>
                    </div>
                </div>
         <div class="col-lg-6">
                    <section id="cart_items">
                        <div class="container">
                          <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                              <%= form_for(@book) do |f| %>
                                <%= f.label :title %>
                                <%= f.text_field :title, class: 'form-control' %>
                                <%= f.label :author %>
                                <%= f.text_field :author, class: 'form-control' %>
                                <%= f.label :price %>
                                <%= f.text_field :price, class: 'form-control' %>
                                <%= f.label :abstract %>
                                <%= f.text_area :abstract, class: 'form-control' %>
                                <%= f.label :genre_id %>
                                <%= f.select :genre_id, Genre.all.collect { |g| [ g.name, g.id ] }, include_blank: true %>
                                <%= f.submit "Add book", class: "btn btn-primary" %>
                              <% end %>
                            </div>
                          </div>
                        </div>
                    </section>
                    </div>
        </div>
</div>

