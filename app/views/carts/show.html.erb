<section id="cart_items">
		<div class="container">
			<div class="breadcrumbs">
				<ol class="breadcrumb">
					<%= link_to "Home", root_path%> >> Shopping Cart
				</ol>
			</div>
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">Item</td>
							<td class="description"></td>
							<td class="price">Price</td>
							<td class="quantity">Quantity</td>
							<td class="total">Total</td>
							<td></td>
						</tr>
					</thead>
					<tbody>
						<% @cart.line_items.each do |item|%>
							<tr>
								<% if item == @current_item %>
									<tr id="current_item">
								<% else %>
									<tr>
								<% end %>
								<td>
									<%= link_to book_path(item.book_id) do %>
									<%=image_tag item.book.image_file_name, :class =>"image-small"%>
									<% end %>
								</td>
								<td class="cart_description">
									<%= link_to book_path(item.book_id) do %>
									<h4><%=item.book.title%></h4>
									<p>by <%=item.book.author%></p>
									<% end %>
								</td>
								<td>
									<p><%=item.book.price%></p>
								</td>
								<td>
									<p><%=item.quantity%></p>
								</td>
								<td class="cart_total">
									<p class="cart_total_price"><%= item.total%></p>
								</td>
								<!-- <td class="cart_delete">
									<%= link_to "Delete", item, method: :delete%>
									<a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
								</td> -->
							</tr>
						<%end%>
					</tbody>
				</table>
				<div class="col-sm-6 pull-right">
					<div class="total_area">
						<ul>
							<li>Total <span><%=@cart.total_price%></span></li>
						</ul>
						<%= button_to "Checkout", new_order_path, method: :get %>
							<%= button_to 'Empty cart', @cart, method: :delete,
														data: { confirm: 'Are you sure?' } %>
							<!-- <a class="btn btn-default check_out" href="">Check Out</a> -->
					</div>
				</div>
			</div>
		</div>
	</section> <!--/#cart_items-->